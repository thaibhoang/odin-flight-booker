<%= form_with model: @flight, url: flights_path, method: :get do |f| %>
  <%= f.label :departure_airport_id %>
  <%= f.select( :departure_airport_id, @airport_options ) %>
  <%= f.label :arrival_airport_id %>
  <%= f.select( :arrival_airport_id, @airport_options ) %>
  <%= label_tag :number_of_seats, "Number of seats" %>
  <%= number_field_tag :number_of_seats, 1, min: 1, max: 4 %>
  <%= label_tag :flight_date %>
  <%= select_tag( :flight_date, options_for_select(@date_options)) %>
  <%= f.submit "Search Flights" %>
<% end %>